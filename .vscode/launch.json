    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/main.ts", // Should point to your TypeScript entry file
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"], // Should match the output directory in tsconfig.json
            "sourceMaps": true,
            "console": "integratedTerminal"
        }
    ]
}
